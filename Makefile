$(NAME):	$(OBJS)
			@$(COMP) $(FLAGS) $(OBJS) -o $(NAME)
			@printf "â–â–â–â–â–â–â–â–â–â–â–â–â–                         \n"
			@printf $(green)
			@printf "SERVER'S FILES COMPILED âœ…\n"
			@printf "â–â–â–â–â–â–â–â–â–â–â–â–â–                         \n"
			@printf $(reset)

all:		$(NAME)

%.o: %.cpp
			@printf $(green)
			@printf "Generating objects...%-33.33s    \r" $@
			@$(COMP) -o $@ -c $< $(FLAGS)
			@printf $(reset)

re: 		fclean all


clean:
			@$(RM) $(OBJS)
			@printf $(yellow)
			@printf "Object files have been deleted ğŸ—‘ \n"
			@printf $(reset)

fclean:		clean
			@$(RM) $(NAME)
			@printf $(cyan)
			@printf "Executable file has been deleted ğŸ—‘ \n"
			@printf $(red)
			@printf "âœ¨ Your folder is now clean âœ¨\n"
			@printf $(reset)

run		: re
		./$(NAME) 8080 123

.PHONY: 	all clean fclean re
